extends ../partials/header
block main
  .all
    .all-content
      .top
        .matches
          .matches-title 
            span Latest Matches
          .matches-content
              each match in matches
                .each-match
                  span.matches-feature.matches-tournament= match.league.name
                  span.matches-feature.matches-teamOne= match.teamOne.name
                  span.matches-feature.matches-result= match.result
                  span.matches-feature.matches-teamTwo= match.teamTwo.name
          - if (5-matches.length > 0) {
            - for(i=0; i<5-matches.length; i++) {
              .each-match
                  span.matches-feature.matches-tournament -
                  span.matches-feature.matches-teamOne -
                  span.matches-feature.matches-result -
                  span.matches-feature.matches-teamTwo -
            - }
          - }
        .news
          iframe.videoOne(src="https://www.youtube.com/embed/" + "913p6ERWQpI" allowfullscreen="allowfullscreen" mozallowfullscreen="mozallowfullscreen" msallowfullscreen="msallowfullscreen" oallowfullscreen="oallowfullscreen" webkitallowfullscreen="webkitallowfullscreen")
      .players
        .players-header 
          .players-title
            span Top 10 - Players
          .players-info 
            .players-gol
              span Goal
            .players-asist
              span Assist
        .players-content
          each topPerson, index in players 
            div(class="person-" + index)
              a.personLink(href="/english/players/details/?id=" + topPerson.id)
                .person
                  .numberedList
                    span= index+1
                  .content-item-name
                    - if (topPerson.name == "Kerem Gümüşgerdan") {
                      span Kerem G.
                    - } else {
                      span #{topPerson.name}
                    - }
                  .content-item.content-item-position
                    span #{topPerson.position}
                  .content-item.content-item-date
                    span #{topPerson.date}
                  .content-item-team
                    span #{topPerson.team}
                  .content-item-gol
                    span #{topPerson.gol}
                  .content-item-last
                    span #{topPerson.asist}
      .tournaments
        .tournament-header 
          span Latest Matches
        each record in leagues
          a(href="/english/leagues/details/?id=" + record.id)
            .leagues
              .leagueHeader
                .headerInfo
                  .header-left
                    h2 #{record.name}
                    span #{record.date}
                  .matches-league
                    h4 Latest Matches:
                    each match in record.matches.slice(0, 3)
                      .each-match
                        span.matches-feature.matches-tournament= match.league.name
                        span.matches-feature.matches-teamOne= match.teamOne.name
                        span.matches-feature.matches-result= match.result
                        span.matches-feature.matches-teamTwo= match.teamTwo.name
                .headerVideo
                  h3 Latest League Video:
                  //- iframe.leagueVideos(src="https://www.youtube.com/embed/" + record.matches[0].get("Video") allowfullscreen="allowfullscreen" mozallowfullscreen="mozallowfullscreen" msallowfullscreen="msallowfullscreen" oallowfullscreen="oallowfullscreen" webkitallowfullscreen="webkitallowfullscreen")
              .leagueContent  
                span Total Match: #{record.matches.length} 
                - if (record.status == "Devam Ediyor") {
                  span.condition Status: Continuing
                - } else {
                  span.condition Status: Ended
                - }
              .details
                span Click for details
                i.fas.fa-info-circle



extends ../partials/header
block main
  .all
    .rode
      a.rodePart.rodeLeagues(href="/english/players") Players >
    .all-content
      h2.sidebar-title Player List
      .forms
        form#name-form(action="/players" method="GET")
          h4 Enter the player's name:
          input.input-name(name="name" placeholder="Name" autocomplete="off")   
        form#school-form(action="/players" method="GET")
          h4 Enter the player's school:
          input.input-name(name="school" placeholder="School" autocomplete="off")       
      .players
        .players-header 
          .header-item.header-item-one
          .header-item
          .header-item
          .header-item
          .header-item 
            span Goal
          .header-item
            span Assist
        .players-content(id="playersContent")
          each person, index in players 
            a.personLink(href="/english/players/details/?id=" + person.id)
              .Person
                .numberedList
                  span= index+1
                .content-item.name
                  span #{person.name}
                .content-item.position
                  span #{person.position}
                .content-item.birthdate
                  span #{person.date}
                .content-item.school
                  span #{person.team}
                .content-item.gol
                  span #{person.gol}
                .content-item.asist 
                  span #{person.asist}

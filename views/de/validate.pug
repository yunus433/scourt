extends ../partials/head
block content
  .all-wrapper
    .all-header
      a(href="/").all-header-name scourt
    .all-content
      - if (user.type == 'user') {
        .form
          form.form-left-side(action="/app/validate/image" method="post" enctype="multipart/form-data")
            label.profile-picture(for="profile")
              img.image(src=user.profilePhoto)
              span.profile-input-explanation Click to change
            input.profile-input(type="file" id="profile" name="profile" accept="image/*")
            - if (err) {
              - if (err==1) {
                .err-message 
                  span.err-message-text Please type all the necessary information
              - }
            - }
          form.form-right-side(action="/app/validate" method="post")
            .form-explanation
              h2 Hi #{user.email},
              span Thank you for joining us! Please enter the following information and choose a profile picture before you move on, so that the teams can find you. 
            .form-part
              span.input-info Your name:
              input(type="text" name="name" autocomplete="off") 
              span.red *
            .form-part
              span.input-info Your birthday:
              input(type="text" placeholder="dd/mm/yyyy" name="date" autocomplete="off") 
              span.red *
            .form-part
              span.input-info Your phone number:
              input(type="tel" name="phone" autocomplete="off") 
            .form-submit
              input.submit-button(type="submit" value="Ok") 
      - } else {
        .form
          form.form-left-side(action="/app/validate/image" method="POST" enctype="multipart/form-data")
            label.profile-picture(for="profile")
              img.image(src=user.profilePhoto)
              span.profile-input-explanation Click to change
            input.profile-input(type="file" id="profile" name="profile" accept="image/*")
            - if (err) {
              - if (err == 1) { 
                .err-message 
                  span.err-message-text Please type all the necessary information
              - }
              - else if (err == 2) { 
                .err-message 
                  span.err-message-text Please confirm your password 
              - }
              - else if (err == 3) { 
                .err-message 
                  span.err-message-text Your e-mail is not valid
              - }
              - else if (err == 4) { 
                .err-message 
                  span.err-message-text Your password should be longer than 5 digits
              - }
              - else if (err == 5) { 
                .err-message 
                  span.err-message-text Sorry, this e-mail has already been taken
              - }
              - else if (err == 5) { 
                .err-message 
                  span.err-message-text Sorry, this e-mail has already been taken
              - }
            - }
          form.form-right-side(action="/app/validate" method="POST")
            .form-explanation
              h2 Hi coach,
              span Thank you for joining us! Please change your password and edit your personal informations before you move on.
            .form-part
              span.input-info Your new password:
              input(type="password" name="password" autocomplete="off" autofocus) 
              span.red *
            .form-part
              span.input-info Confirm your password:
              input(type="password" name="confirmPassword" autocomplete="off") 
              span.red *
            .form-part
              span.input-info Your name:
              input(type="text" name="name" autocomplete="off") 
              span.red *
            .form-part
              span.input-info Your email:
              input(type="text" name="email" autocomplete="off") 
              span.red *
            .form-part
              span.input-info Your phone number:
              input(type="tel" name="phone" autocomplete="off") 
            .form-submit
              input.submit-button(type="submit" value="Ok") 
      - }
      

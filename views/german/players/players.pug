extends ../partials/header
block main
  .all
    .rode
      a.rodePart.rodeLeagues(href="/german/spieler") Spieler >
    .all-content
      h2.sidebar-title Spielerliste
      .forms
        form#name-form(action="/players" method="GET")
          h4 Geben Sie den Namen des Spielers ein:
          input.input-name(name="name" placeholder="Name" autocomplete="off")   
        form#school-form(action="/players" method="GET")
          h4 Geben Sie die Schule des Spielers ein:
          input.input-name(name="school" placeholder="Team" autocomplete="off")       
      .players
        .players-header 
          .header-item.header-item-one
          .header-item
          .header-item
          .header-item
          .header-item 
            span Tor
          .header-item
            span Assist
        .players-content(id="playersContent")
          each person, index in players 
            a.personLink(href="/german/spieler/details/?id=" + person.id)
              .Person
                .numberedList
                  span= index+1
                .content-item.name
                  span #{person.name}
                .content-item.position
                  span #{person.positionGerman}
                .content-item.birthdate
                  span #{person.date}
                .content-item.school
                  span #{person.team}
                .content-item.gol
                  span #{person.gol}
                .content-item.asist 
                  span #{person.asist}

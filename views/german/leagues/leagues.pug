extends ../partials/header
block main
  .all
    .rode
      a.rodePart(href="/german/ligen") Ligen >
    .all-content
      h2 Die Ligen, denen wir folgen
      .filter-form
        form.ended(action="/leagues" method="GET")
          input#checkbox-ended-english(type="checkbox" name="ended")
        span Nur die fortlaufenden Ligen anzeigen
      .leagueList
        each record, index in leagues
          - if (record) {
            a(href="/german/ligen/details/?id=" + record.id)
              .leagues
                .leagueHeader
                  .headerInfo
                    .header-left
                      h2 #{record.name}
                      span #{record.date}
                    .matches
                      h4 Freundschaftsliga
                      each match in record.matches.slice(0, 3)
                        .each-match
                          span.matches-feature.matches-date= match.date
                          span.matches-feature.matches-teamOne= match.teamOne.name
                          span.matches-feature.matches-result= match.result
                          span.matches-feature.matches-teamTwo= match.teamTwo.name
                  .headerVideo
                    h3 Das neueste Liga-Video:
                    //- iframe.leagueVideos(src="https://www.youtube.com/embed/" + record.matches[0].get("Video") allowfullscreen="allowfullscreen" mozallowfullscreen="mozallowfullscreen" msallowfullscreen="msallowfullscreen" oallowfullscreen="oallowfullscreen" webkitallowfullscreen="webkitallowfullscreen")
                .leagueContent  
                  span Anzahl der gespielten Spiele: #{record.matches.length} 
                  - if (record.status == "Devam Ediyor") {
                    span.condition Status: Continuing
                  - } else {
                    span.condition Status: Ended
                  - }
                .details
                  span Fur details hier klicken
                  i.fas.fa-info-circle
          - }
      .leagueCommunication 
        span Das ist alles für jetzt. Wenn Sie möchten, dass wir einer anderen Liga aus Ihrem Land oder Ihrer Stadt folgen, senden Sie uns einfach eine E-Mail!

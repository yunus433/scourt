extends ../partials/header
block main
  .all
    .all-content
      .top
        .matches
          .matches-title 
            span Letzte Spiele
          .matches-content
              each match in matches
                .each-match
                  span.matches-feature.matches-tournament= match.league.get("Name")
                  span.matches-feature.matches-teamOne= match.teamOne.get("Name")
                  span.matches-feature.matches-result= match.get("Skor")
                  span.matches-feature.matches-teamTwo= match.teamTwo.get("Name")
          - if (5-matches.length > 0) {
            - for(i=0; i<5-matches.length; i++) {
              .each-match
                  span.matches-feature.matches-tournament -
                  span.matches-feature.matches-teamOne -
                  span.matches-feature.matches-result -
                  span.matches-feature.matches-teamTwo -
            - }
          - }
        .news
          iframe.videoOne(src="https://www.youtube.com/embed/" + lastMatch.get("Video") allowfullscreen="allowfullscreen" mozallowfullscreen="mozallowfullscreen" msallowfullscreen="msallowfullscreen" oallowfullscreen="oallowfullscreen" webkitallowfullscreen="webkitallowfullscreen")
      .players
        .players-header 
          .players-title
            span Top 10 - Spieler
          .players-info 
            .players-gol
              span Tor
            .players-asist
              span Assist
        .players-content
          each topPerson, index in players 
            div(class="person-" + index)
              a.personLink(href="/english/players/details/?id=" + topPerson.getId())
                .person
                  .numberedList
                    span= index+1
                  .content-item-name
                    - if (topPerson.get("Name") == "Kerem Gümüşgerdan") {
                      span Kerem G.
                    - } else {
                      span #{topPerson.get("Name")}
                    - }
                  .content-item.content-item-position
                    span #{topPerson.get("Position")}
                  .content-item.content-item-date
                    span #{topPerson.get("Notes")}
                  .content-item-team
                    span #{topPerson.school.get("Name")}
                  .content-item-gol
                    span #{topPerson.get("Gol")}
                  .content-item-last
                    span #{topPerson.get("Asist")}
      .tournaments
        .tournament-header 
          span Latest Matches
        each record in tournaments
          a(href="/english/leagues/details/?id=" + record.getId())
            .leagues
              .leagueHeader
                .headerInfo
                  .header-left
                    h2 #{record.get("Name")}
                    span #{record.get("Tarih")}
                  .matches-league
                    h4 Latest Matches:
                    each match in record.matches.slice(0, 3)
                      .each-match
                        span.matches-feature.matches-tournament= match.league.get("Name")
                        span.matches-feature.matches-teamOne= match.teamOne.get("Name")
                        span.matches-feature.matches-result= match.get("Skor")
                        span.matches-feature.matches-teamTwo= match.teamTwo.get("Name")
                .headerVideo
                  h3 Latest League Video:
                  iframe.leagueVideos(src="https://www.youtube.com/embed/" + record.matches[0].get("Video") allowfullscreen="allowfullscreen" mozallowfullscreen="mozallowfullscreen" msallowfullscreen="msallowfullscreen" oallowfullscreen="oallowfullscreen" webkitallowfullscreen="webkitallowfullscreen")
              .leagueContent  
                span Total Match: #{record.get("Maçlar").length} 
                - if (record.get("Durum") == "Devam Ediyor") {
                  span.condition Status: Continuing
                - } else {
                  span.condition Status: Ended
                - }
              .details
                span Fur details hier klicken
                i.fas.fa-info-circle



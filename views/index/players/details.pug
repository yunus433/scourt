extends ../../partials/header
block main
  .all
    .rode
      a.rodePart.rodeLeagues(href="/players") Oyuncular > 
      a.rodePart.rodeDetails(href="/players/details?id=" + record.id)  #{record.name}
    .all-content
      .player-data
        .player-header
          .header-info
            h1.name= record.name
            .header-bottom
              .header-info-left
                span.age Doğum Tarihi: #{record.date}
                span.position Pozisyon: #{record.pozisyon}
                span.gol Gol: #{record.gol}
                span.asist Asist: #{record.asist}
          .header-image
            - if(record.profile == '-' || !record.profile) {
              img.player-img(src="/res/defaultUserPicture.png")
            - } else { 
              img.player-img(src="/res/" + record.profile)
            - }
        .player-content
          .player-content-header
            button.details-header
              h4.players-header-title Oyuncu Detayları
            button.videos-header
              h4.players-header-title  Oyuncu Videoları
          .details
            .each-detail
              span.detail-name Okul:
              span.detail-info= record.team
            .each-detail
              span.detail-name Boy:
              span.detail-info= record.boy   
            .each-detail
              span.detail-name Kilo:
              span.detail-info= record.kilo
            .each-detail
              span.detail-name Ayak:
              span.detail-info= record.ayak
          .videos
            - if(record.videos) {

            - } else {
              .no-warning 
                span Şimdilik oynanmış bir maç kaydı görünmüyor
            - }
    

extends ../../partials/header
block main
  .all
    .rode
      a.rodePart.rodeLeagues(href="/teams") Takımlar >
    .all-content
      .school-list
        each school in schools
          - if(school.name) {
            a(href="/teams/details/?id=" + school.id)
              .each-school
                .school-top
                  .school-symbol-wrapper
                    img.school-symbol(src="/res/schoolLogos/" + school.logo class="" + school.name)
                  .school-name
                    h3.school-name #{school.name}
                .school-bottom
                  .school-players
                    h3 İlk Beş Oyuncu:
                    each player, index in school.players.slice(0, 5)
                      span.player-names #{index+1}. #{player.name}
                  .details
                    span Detaylar için tıklayın
                    i.fas.fa-info-circle
          - }
      .school-communication
        span Şimdilik sadece bu okulların liglerini takip ediyoruz. Eğer kendi okulunun takip edilmesini istersen bize bir mail atman yeterli!
    
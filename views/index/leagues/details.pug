extends ../../partials/header
block main
  .all
    .rode
      a.rodePart.rodeLeagues(href="/leagues") Ligler > 
      a.rodePart.rodeDetails(href="/leagues/details?id=" + record.id) #{record.name} >
    .all-content
      .league
        .leagueHeader
          .league-header-info
            h2.leagueName= record.name
            span(class="" + record.status) (#{record.status})
            .generalInfo
              span Tarih: #{record.date}
              span Oynanmış Maç Sayısı: #{record.matches.length}
          .league-header-video
            h3 En son yayınladığımız lig videosu:
            //- iframe.leagueVideo(src="https://www.youtube.com/embed/" + record.matches[0].get("Video") allowfullscreen="allowfullscreen" mozallowfullscreen="mozallowfullscreen" msallowfullscreen="msallowfullscreen" oallowfullscreen="oallowfullscreen" webkitallowfullscreen="webkitallowfullscreen")
        .leagueContent
          .leagueContentHeader 
            .league-order-header
              h4 Lig Sıralaması
            .matches-header
              h4 Tüm Maçlar
            .all-videos-header
              h4 Lig Videoları
          .league-order
            .content
              - if(sort) {
                .info 
                  span Mevcut takım sıralaması
                .sort-header
                  .sort-feature-number
                  .sort-feature-logo
                  .sort-feature-school
                  .sort-feature-header
                    span Atılan
                  .sort-feature-header
                    span Yenilen
                each school, index in sort
                  .school-sort
                    - if (school.yenilen === 1000) {
                      .sort-feature-number
                        span #{index+1}. 
                      .sort-feature-school
                        span #{school.name}
                      .sort-feature-logo
                        img.symbol-image-sort(src="/res/schoolLogos/" + school.logo) 
                      .sort-feature
                        span -
                      .sort-feature
                        span -
                    - } else {
                      .sort-feature-number
                        span #{index+1}. 
                      .sort-feature-school
                        span #{school.name}
                      .sort-feature-logo
                        img.symbol-image-sort(src="/res/schoolLogos/" + school.logo class="sort-" + school.name) 
                      .sort-feature
                        span #{school.atılan}
                      .sort-feature
                        span #{school.yenilen}
                    - }
              - } else {
                .no-match-warning 
                  span Şimdilik mevcut bir sıralama görünmüyor
              - }
          .matches
            .content
              - if(record.matches.length > 0) {
              .info
                span Maç detaylarını ve videoları 
              each match in record.matches
                .each-match
                  .matches-feature.matches-date            
                    span= match.name
                  .matches-feature.matches-teamOne
                    span= match.teamOne.name
                  .matches-feature.symbol
                    img.symbol-image(src="/res/schoolLogos/" + match.teamOne.logo class="" + match.teamOne.name) 
                  .matches-feature.matches-result
                    span= match.name
                  .matches-feature.symbol
                    img.symbol-image.match(src="/res/schoolLogos/" + match.teamTwo.logo class="" + match.teamTwo.name)  
                  .matches-feature.matches-teamTwo             
                    span= match.teamTwo.name
              - } else {
                .no-match-warning 
                  span Şimdilik oynanmış bir maç kaydı görünmüyor
              - }
          .all-videos
            .content
              - if(0) {
                .info
                  span İstediğiniz lig videolarını ve maç özetlerini izleyin
                each match in record.matches
                  - if (match.video) {
                    .each-video
                      .each-video-left
                        iframe.each-videos(src="https://www.youtube.com/embed/" + match.get("Video") allowfullscreen="allowfullscreen" mozallowfullscreen="mozallowfullscreen" msallowfullscreen="msallowfullscreen" oallowfullscreen="oallowfullscreen" webkitallowfullscreen="webkitallowfullscreen")
                      .each-video-right
                        .sides
                          .sides-info
                            span.video-teamOne= match.teamOne.name
                            span  - 
                            span.video-teamTwo= match.teamTwo.name
                          .sides-score
                            span.video-skor (#{match.name})
                        .video-date
                          span (#{match.date})
                        .explanation
                          //- span Video Açıklaması: #{match.get("Video Açıklaması")}
                  - }
              - } else {
                .no-match-warning 
                  span Şimdilik hiç bir video kaydı görünmüyor
              - }

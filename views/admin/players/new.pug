extends ../partials/head
block content
  .add-new-block
    h2.title Yeni Oyuncu Ekle
    form.form(action="/admin/players/new" method="POST")
      h4 Yeni oyuncu girişini tamamlamak için aşağıdaki bilgileri doldurun:
      .form-line
        input(type="text" placeholder="Oyuncu İsmi" autocomplete="off" autofocus name="name")
        input(type="text" placeholder="Doğum Tarihi" autocomplete="off" name="date") 
        input(type="text" name="pozisyon" autocomplete="off" placeholder="Pozisyon")
      .form-line
        span Cinsiyet:
        select(name="gender")
          option(value="Erkek") Erkek
          option(value="Kız") Kız
        span Takım:
        select(name="team")
          each team in teams
            option(value= team._id)= team.name
      .form-line
        span Gol sayısı:
        input(type="number" name="gol" value=0)
        span Asist sayısı:
        input(type="number", name="asist" value=0)
      .form-line
        span Oyuncunun Uzunluğu:
        input(type="text" name="boy" autocomplete="off")
      .form-line
        span Oyuncunun Kilosu:
        input(type="text" name="kilo" autocomplete="off")
      .form-line
        span Oyuncunun Oynadığı Ayak:
        select(name="ayak")
          option(value="Sağ") Sağ 
          option(value="Sol") Sol 
          option(value="Her ikisi de") Her ikisi de
      .exit-add-new-block-wrapper
        a(href="/admin/players").exit-add-new-block Çıkış
        button.add-new-submit(type="submit") Kaydet  

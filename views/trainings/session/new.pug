extends ../../partials/header
block content
  .selected-session-type
    span None
  form.session-send-form(action="/trainings/session/new" method="post")
    input.display-none#session-drill-input(type="text" name="drills")
    input.session-name-input(type="text" required name="name" placeholder="Write a name for your session" autocomplete="off" autofocus)
    .form-send-line
      .form-close-button
        span Back
      button.form-send-button Ok
  .session-create-area

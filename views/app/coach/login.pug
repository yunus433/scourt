extends ../../partials/head
block content
  .all-wrapper
    .all-header
      span.name scourt
    .all-content
      form.form(action="/coachLogin" method="POST")
        input.form-inputs(type="text" name="id" placeholder="your id" autocomplete="off" autofocus)
        input.form-inputs(type="password" name="password" placeholder="password" autocomplete="off")
        - if (err) {
          - if (err == 1) { 
            .err-message 
              span.err-message-text Sorry, your e-mail or password is wrong
          - }
        - }
        input.submit-button(type="submit" value="Login")
      .form-explanation
        span.form-explanation-title You need a coach id and a password to login. You can learn yours by calling one of our representers or by sending an e-mail

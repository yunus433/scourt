extends ../../partials/head
block content
  .all-wrapper
    .all-header
      a(href="/").all-header-name scourt
    .all-content
      .form
        form.form-left-side(action="/app/validate/image" method="post" enctype="multipart/form-data")
          label.profile-picture(for="profile")
            img.image(src="/res/uploads/" + user.profilePhoto)
            span.profile-input-explanation Click to change
          input.profile-input(type="file" id="profile" name="profile" accept="image/*")
          - if (err) {
            - if (err==1) {
              .err-message 
                span.err-message-text Please type all the necessary information
            - }
          - }
        form.form-right-side(action="/app/validate" method="post")
          .form-explanation
            h2 Hi #{user.email},
            span Thank you for joining us! Please enter the following information and choose a profile picture before you move on, so that the teams can find you. 
          .form-part
            span.input-info Your name:
            input(type="text" name="name" autocomplete="off") 
            span.red *
          .form-part
            span.input-info Your birthday:
            input(type="text" placeholder="dd/mm/yyyy" name="date" autocomplete="off") 
            span.red *
          .form-part
            span.input-info Your phone number:
            input(type="tel" name="phone" autocomplete="off") 
          .form-submit
            input.submit-button(type="submit" value="Ok") 

extends ../../partials/head
block content
  .all-wrapper
    .all-header
      span.name scourt
    .all-content
      form.form(action="/register" method="POST")
        input.form-inputs(type="text" name="email" placeholder="email" autocomplete="off" autofocus)
        input.form-inputs(type="password" name="password" placeholder="password" autocomplete="off")
        input.form-inputs(type="password" name="confirmpassword" placeholder="confirm password" autocomplete="off")
        - if (err) {
          - if (err == 1) { 
            .err-message 
              span.err-message-text Please type all the necessary information
          - }
          - else if (err == 2) { 
            .err-message 
              span.err-message-text Please confirm your password 
          - }
          - else if (err == 3) { 
            .err-message 
              span.err-message-text Your e-mail is not valid
          - }
          - else if (err == 4) { 
            .err-message 
              span.err-message-text Your password should be longer than 5 digits
          - }
          - else if (err == 5) { 
            .err-message 
              span.err-message-text Sorry, this e-mail has already been taken
          - }
        - }
        input.submit-button(type="submit" value="Sign Up")
      a.login-link(href="/login") Already have an account?
